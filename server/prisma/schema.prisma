generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  avatar    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.LongText
  img       String?
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id]) // onDelete: Cascade 级联删除 默认 Restrict
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
